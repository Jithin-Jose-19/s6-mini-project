<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8" />
    <title>PROJECT</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="/style-experiment.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body>
    <div class="filter-buttons">
      <div class="list-view-button"><i class="fa fa-bars" aria-hidden="true"></i> List view</div>
      <div class="grid-view-button"><i class="fa fa-th-large" aria-hidden="true"></i> Grid view</div>
      <div class="grid-view-button" style="margin-left : 10px;"><a class=""grid-view-button" style="text-decoration : none; color:rgb(255, 255, 255);"href="/student/course-select">Choose another course</a></div>
    </div>
    <h2>Selected Course : <%= selectedCourseCode.toUpperCase() + " - " + selectedCourseName %> </h2>
    <ol class="list list-view-filter">
      <form action="/student/upload-code" id="myForm">
        <input type="hidden" name="selectedCourse" value="<%= selectedCourseCode %> ">
        <% experiments.forEach(experiment => { %>
          <li>Experiment <%= experiment.experimentNumber + " - " + experiment.experimentName %>
          <input name="experimentNumber" type="hidden" value="<%= experiment.experimentNumber  %> "></li>
        <% }) %> 
      </form>
    </ol> 
      <script src="/js/list.js">
      </script>
    </body>
    </html>