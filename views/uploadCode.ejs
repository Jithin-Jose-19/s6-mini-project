<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>MITS LOVS</title>
    <link rel="stylesheet" href="/styleuploadcode.css" />
  </head>
  <body>
    <form id="codeUploadForm" action="/student/uploadCodeFile" method="post">
      <textarea
        id="code-txt-area"
        name="code"
        cols="150"
        rows="50"
        style="overflow: auto"
        placeholder="paste your code here.."
      >
      </textarea>
      <label for="code-extension">Choose language:</label>
      <select name="code-extension" id="code-extension">
        <option value="c">C</option>
        <option value="java">Java</option>
      </select>
      <input type="submit" value="Submit" class="sbt-btn" />
    </form>

    <% if (typeof testCaseResult !== 'undefined') { %>
    <h3>Test Cases</h3>
    <div class="container space-between">
      <div id="t1" x>Test Case 1 : <%= testCaseResult.t1 %></div>
      <div>Test Case 2 : <%= testCaseResult.t2 %></div>
      <div>Test Case 3 : <%= testCaseResult.t3 %></div>
    </div>
    <% }%>
  </body>
  <script>
    function validateTestCases() {
      document.getElementById("t1").innerHTML = "Test Case 1 : \u274C";
    }
  </script>
</html>
